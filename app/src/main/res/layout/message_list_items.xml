<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardCornerRadius="5dp"
    app:cardElevation="10sp"
    android:layout_margin="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18sp"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNameMessage"
            android:textColor="#857D7D"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#857D7D"
            android:id="@+id/messageItself"
            android:layout_marginTop="7dp"
            android:layout_below="@id/userNameMessage"
            android:textSize="19sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_marginTop="12dp"
            android:layout_below="@id/messageItself"
            android:textColor="#857D7D"
            android:textStyle="bold"
            android:id="@+id/messageT"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/messageBox"
            android:layout_marginTop="0dp"
            android:layout_below="@id/messageT"
            android:textColor="#595454"
            android:textSize="17sp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>